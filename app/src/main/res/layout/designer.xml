<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="#00b200"
    android:layout_height="match_parent">
   <LinearLayout
       android:id="@+id/temp"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           >
           <TextView android:text="Name of Game"
               android:id="@+id/workflow_name"
               android:layout_marginTop="22dp"
               android:layout_marginBottom="22dp"
               android:textColor="#0f0f0f"
               android:layout_width="wrap_content"
               android:layout_centerInParent="true"
               android:layout_gravity="center"
               android:textSize="21dp"
               android:textStyle="bold"

               android:layout_height="wrap_content" />
           <Button
               android:id="@+id/generate_button"
               android:layout_centerVertical="true"
               android:layout_margin="3dp"
               android:layout_alignParentRight="true"
               android:background="#5c5c5c"
               android:textColor="#fff"
               android:layout_width="wrap_content"
               android:layout_marginRight="10dp"
               android:layout_height="wrap_content"
               android:text="Generate"
               />
       </RelativeLayout>


       <View
           android:layout_width="match_parent"
           android:layout_height="2.5dp"
           android:background="#fff" />
   </LinearLayout>
    <TextView android:text="Choose :"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textColor="#0f0f0f"
        android:layout_width="wrap_content"

        android:textSize="21dp"
        android:textStyle="bold"

        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:background="#fff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:background="#fff" />

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
          <Button
              android:id="@+id/activity_button"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_margin="3dp"
              android:background="#5c5c5c"
              android:textColor="#fff"
              android:text="Activity"
              />

          <Button
              android:id="@+id/activities_button"
              android:layout_width="fill_parent"
              android:background="#5c5c5c"
              android:textColor="#fff"
              android:layout_margin="3dp"
              android:layout_height="wrap_content"
              android:text="Activities"
              />
          <View
              android:layout_width="fill_parent"
              android:layout_height="5dp"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:background="#fff" />
          <Button
              android:id="@+id/if_button"
              android:layout_width="fill_parent"
              android:layout_margin="3dp"
              android:layout_height="wrap_content"
              android:background="#5c5c5c"
              android:textColor="#fff"
              android:text="If"
              />
          <Button
              android:id="@+id/else_button"
              android:layout_width="fill_parent"
              android:background="#5c5c5c"
              android:textColor="#fff"
              android:layout_height="wrap_content"
              android:layout_margin="3dp"
              android:text="Else"
              />
          <Button
              android:id="@+id/repeat_button"
              android:layout_width="fill_parent"
              android:layout_margin="3dp"
              android:background="#5c5c5c"
              android:textColor="#fff"
              android:layout_height="wrap_content"
              android:text="Repeat"
              />
          <View
              android:layout_width="fill_parent"
              android:layout_height="5dp"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:background="#fff" />
          <Button
              android:id="@+id/delete_button"
              android:layout_width="wrap_content"
              android:background="#5c5c5c"
              android:textColor="#fff"
              android:layout_margin="3dp"
              android:layout_height="wrap_content"
              android:text="Delete"
              />

      </LinearLayout>
      <WebView
          android:id="@+id/web_designer"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"></WebView>
  </LinearLayout>

</LinearLayout>