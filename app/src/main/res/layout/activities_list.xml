<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"

    android:background="#00b200"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/temp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/steps_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:text="Walk"/>
            <EditText
                android:id="@+id/steps_count"
                android:layout_width="wrap_content"
                android:inputType="number"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:enabled="false"
                android:hint="steps"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/wait_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Wait"/>
            <EditText
                android:id="@+id/seconds_count"
                android:layout_width="wrap_content"
                android:enabled="false"
                android:textSize="20dp"
                android:textColor="#fff"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:hint="seconds"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Seconds"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/right_turn_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Turn Right"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/left_turn_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Tuen left"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <CheckBox
                android:id="@+id/say_something_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Say"/>
            <EditText
                android:id="@+id/say_something_text"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:enabled="false"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:hint="type something"
                />

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/go_button"
        android:layout_marginTop="40dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_below="@+id/temp"
        android:layout_margin="3dp"
        android:background="@drawable/button"
        android:textStyle="bold"
        android:textColor="#003300"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Go"/>
</RelativeLayout>